@model  FinalAssignment.Models.AppraisalModel;
@{
    ViewData["Title"] = "Add Appraisal";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
@ViewBag.aa
    <form class="form-horizontal" asp-action="AddAppraisal" method="post" enctype="multipart/form-data">
        <div class="row m-sm-2">
            <label class="control-label col-sm-2">Employee : </label>
            <div class="col-sm-5">
                <select class="form-control state" asp-items="@ViewBag.employees" asp-for="EmployeeId">
                    <option value=""> -- Employee --</option>
                </select>
            </div>
            <span class="col-sm-3 text-danger small" asp-validation-for="EmployeeId"></span>
        </div>
        <div class="row m-sm-2">
            <label class="control-label col-sm-2">Current Appraisal : </label>
            <div class="col-sm-5">
                <div class="input-group">
                    <input type="text" class="form-control from" asp-for="CurrentAppraisal" autocomplete="off">
                    <div class="input-group-append">
                        <span class="input-group-text showdatepicker"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>
            </div>
            <span class="col-sm-3 text-danger small" asp-validation-for="CurrentAppraisal"></span>
        </div>
        <div class="row m-sm-2">
            <label class="control-label col-sm-2">Next Appraisal : </label>
            <div class="col-sm-5">
                <div class="input-group">
                    <input type="text" class="form-control to" asp-for="NextAppraisal" autocomplete="off">
                    <div class="input-group-append">
                        <span class="input-group-text showdatepicker"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>
            </div>
            <span class="col-sm-3 text-danger small"></span>
        </div>
        <div class="row m-sm-2">
            <label class="control-label col-sm-2"> Upload Document(s): </label>
            <div class="col-sm-5">
                <div class="input-group attachitem ">
                    <div><input type="file" class="m-sm-1" name="files"></div>
                </div>
                <a class="btn btn-outline-secondary small m-sm-2 float-right attach">Attach More</a>
            </div>
            <span class="col-sm-3 text-danger small"></span>
        </div>
        <div class="row m-sm-2">
            <label class="control-label col-sm-2">Remark:</label>
            <div class="col-sm-5">
                <textarea type="text" class="form-control" asp-for="Remark"></textarea>
            </div>
            <span class="col-sm-3 text-danger small"></span>
        </div>
        <div class="form-group">
            <div class="col-sm-7">
                <a asp-action="Appraisals" class="btn btn-warning float-right m-sm-1">Cancel</a>
                <button type="submit" class="btn btn-primary float-right m-sm-1">Submit</button>
            </div>
        </div>
    </form>