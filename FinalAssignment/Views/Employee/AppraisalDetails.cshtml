@model FinalAssignment.Models.AppraisalModel;
@{
    ViewData["Title"] = "Appraisal Details";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

    <form class="form-horizontal" asp-action="AddAppraisal" method="post" enctype="multipart/form-data">
        <div class="row m-sm-2">
            <label class="control-label col-sm-2">Employee : </label>
            <div class="col-sm-5">
                <select class="form-control state" asp-items="@ViewBag.employees" asp-for="EmployeeId" disabled>
                    <option value=""> -- Employee --</option>
                </select>
            </div>
            <span class="col-sm-3 text-danger small" asp-validation-for="EmployeeId"></span>
        </div>
        <div class="row m-sm-2">
            <label class="control-label col-sm-2">Current Appraisal : </label>
            <div class="col-sm-5">
                <div class="input-group">
                    <input type="text" class="form-control from" asp-for="CurrentAppraisal" value="@Model.CurrentAppraisal.ToString("MMM/yyyy")" disabled>
                    <div class="input-group-append">
                        <span class="input-group-text showdatepicker"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>
            </div>
            <span class="col-sm-3 text-danger small" asp-validation-for="CurrentAppraisal" ></span>
        </div>
        <div class="row m-sm-2">
            <label class="control-label col-sm-2">Next Appraisal : </label>
            <div class="col-sm-5">
                <div class="input-group">
                    <input type="text" class="form-control to" asp-for="NextAppraisal" value="@Model.NextAppraisal.ToString("MMM/yyyy")" disabled>
                    <div class="input-group-append">
                        <span class="input-group-text showdatepicker"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>
            </div>
            <span class="col-sm-3 text-danger small"></span>
        </div>
        <div class="row m-sm-2">
            <label class="control-label col-sm-2"> Upload Document(s): </label>
            <div class="col-sm-5">
                <div class="input-group attachitem ">
                    <ul>
                        @foreach(var file in Model.Files)
                        {
                            <li><a href="~/files/@file">@file</a></li>
                        }
                    </ul>
                </div>
            </div>
            <span class="col-sm-3 text-danger small"></span>
        </div>
        <div class="row m-sm-2">
            <label class="control-label col-sm-2">Remark:</label>
            <div class="col-sm-5">
                <textarea type="text" class="form-control textarea" name="name" asp-for="Remark" disabled></textarea>
            </div>
            <span class="col-sm-3 text-danger small"></span>
        </div>
        <div class="form-group">
            <div class="col-sm-7">
                <a asp-action="Appraisals" class="btn btn-warning float-right m-sm-1">Cancel</a>
            </div>
        </div>
    </form>

<br />
    <div class="row mt-sm-5">
        <div class="col-sm-12 mt-sm-3">
            <table class="table table-striped">
                <thead>

                    <tr>
                        <th>#</th>
                        <th>Current Appraisals</th>
                        <th>Next Appraisals</th>
                        <th>Remark</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.history)
                    {
                        <tr>
                            <td>1</td>
                            <td>@item.CurrentAppraisal.ToString("MMM/yyyy")</td>
                            <td>@item.NextAppraisal.ToString("MMM/yyyy")</td>
                            <td>@item.Remark</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>